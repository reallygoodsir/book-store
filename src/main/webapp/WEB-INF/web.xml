    <servlet-mapping>
        <servlet-name>GenerateReportsServlet</servlet-name>
        <url-pattern>/generateReports</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserRegistrationServlet</servlet-name>
        <url-pattern>/user-register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CustomerAccountServlet</servlet-name>
        <url-pattern>/CustomerAccount</url-pattern>
    </servlet-mapping>

    <context-param>
        <description>First location to store uploaded cover images</description>
        <param-name>file-upload</param-name>
        <param-value>
            d:\data\Java\apache-tomcat-9.0.93\webapps\book-store\book_images
